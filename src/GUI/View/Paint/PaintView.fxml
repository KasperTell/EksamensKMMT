<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.PaintController">
   <children>
      <Canvas fx:id="canvas" height="800.0" layoutX="200.0" width="800.0" />
      <VBox prefHeight="800.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Button fx:id="screen" mnemonicParsing="false" onAction="#handleScreen" prefWidth="100.0" text="Screen">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="projector" mnemonicParsing="false" onAction="#handleProjector" prefWidth="100.0" text="Projector">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="speaker" mnemonicParsing="false" onAction="#handleSpeaker" prefWidth="100.0" text="speaker">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="cable" mnemonicParsing="false" onAction="#handleCable" prefWidth="100.0" text="Cable">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="techBox" mnemonicParsing="false" onAction="#handleTechBox" prefWidth="100.0" text="Tech Box">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="eraser" mnemonicParsing="false" onAction="#handleEraser" prefWidth="100.0" text="Eraser">
               <VBox.margin>
                  <Insets left="10.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="clear" mnemonicParsing="false" onAction="#handleClear" prefWidth="100.0" text="Clear">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="saveCanvas" mnemonicParsing="false" onAction="#handleSaveCanvas" prefWidth="100.0" text="Save Canvas">
               <VBox.margin>
                  <Insets left="10.0" top="70.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="back" mnemonicParsing="false" onAction="#handleBackToMainView" prefWidth="100.0" text="Close">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
