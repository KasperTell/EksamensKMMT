<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="vBoxAnchorPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.MainController">
   <children>
      <AnchorPane fx:id="mainViewAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0">
         <children>
            <TabPane layoutX="50.0" layoutY="100.0" prefHeight="550.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Open">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="openProjectsTable" prefHeight="468.5" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="customerProjectOpen" prefWidth="200.0" resizable="false" text="Customer" />
                                  <TableColumn fx:id="projectNameOpen" prefWidth="200.0" resizable="false" text="Project" />
                                  <TableColumn fx:id="projectDateOpen" prefWidth="100.0" resizable="false" text="Date" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Closed">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="closedProjectsTable" layoutY="7.0" prefHeight="468.5" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <columns>
                                    <TableColumn fx:id="customerNameClosed" prefWidth="200.0" resizable="false" text="Customer" />
                                    <TableColumn fx:id="projectNameClosed" prefWidth="200.0" resizable="false" text="Project" />
                                    <TableColumn fx:id="projectDateClosed" prefWidth="100.0" resizable="false" text="Date" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
            <TableView fx:id="customerTable" layoutX="650.0" layoutY="130.0" prefHeight="66.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="customerNameClm" prefWidth="100.0" resizable="false" text="Name" />
                  <TableColumn fx:id="customerMailClm" prefWidth="100.0" resizable="false" text="Mail" />
                  <TableColumn fx:id="customerPhoneClm" prefWidth="100.0" resizable="false" text="Phone" />
                <TableColumn fx:id="customerAddressClm" prefWidth="100.0" resizable="false" text="Adress" />
                  <TableColumn fx:id="customerZipClm" prefWidth="100.0" resizable="false" text="Zip" />
              </columns>
            </TableView>
            <TextField fx:id="searchBoxTextField" layoutX="650.0" layoutY="100.0" onKeyReleased="#searchProjectsByStringQuery" prefWidth="200.0" promptText="Søg..." />
            <Label layoutX="650.0" layoutY="50.0" text="Customers" textFill="#f2f2f2">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label layoutX="50.0" layoutY="50.0" text="Projects" textFill="#f2f2f2">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="newProjectButton" layoutX="50.0" layoutY="675.0" mnemonicParsing="false" onAction="#newProjectAction" />
            <Button fx:id="newCustomerButton" layoutX="650.0" layoutY="675.0" mnemonicParsing="false" onAction="#newCustomerAction" />
            <Button fx:id="closeProjectButton" layoutX="250.0" layoutY="675.0" mnemonicParsing="false" onAction="#closeProjectAction" />
            <Button fx:id="reOpenProjectButton" layoutX="330.0" layoutY="675.0" mnemonicParsing="false" onAction="#reopenProjectAction" />
            <Button fx:id="openProjectWindowButton" layoutX="995.0" layoutY="675.0" mnemonicParsing="false" onAction="#handleOpenProjectWindow" />
            <Button fx:id="openUserWindowButton" layoutX="1075.0" layoutY="675.0" mnemonicParsing="false" onAction="#handleOpenUserWindow" />
            <TextArea fx:id="NotesTextArea" layoutX="650.0" layoutY="200.0" prefHeight="450.0" prefWidth="500.0" />
         </children>
      </AnchorPane>
      <VBox fx:id="vbxCreateNewProject" prefHeight="800.0" prefWidth="345.0" spacing="30.0" translateX="-345.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="355.0" text="Opret et nyt projekt">
               <font>
                  <Font name="System Bold" size="34.0" />
               </font>
            </Label>
            <TextField fx:id="projectNameTextField" promptText="Navn på projektet">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <ComboBox fx:id="customerComboBox" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </ComboBox>
            <Button fx:id="addNewProjectButton" mnemonicParsing="false" onAction="#handleAddNewProject" text="Tilføj projekt">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
      <VBox fx:id="vbxCreateNewCustomer" prefHeight="800.0" prefWidth="345.0" spacing="30.0" translateX="1200.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="355.0" text="Opret en ny kunde">
               <font>
                  <Font name="System Bold" size="34.0" />
               </font>
            </Label>
            <TextField fx:id="customerFirstNameTextField" promptText="Fornavn på kunden">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="customerLastNameTextField" promptText="Efternavn på kunden">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="companyNameTextField" promptText="Virksomhedsnavn">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="customerAddressTextField" promptText="Adresse">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="customerZipCodeTextField" promptText="Postnummer">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="customerEmailTextField" promptText="Email">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="customerPhoneNumberTextField" promptText="Telefonnummer">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnAddNewCustomer" mnemonicParsing="false" onAction="#handleAddNewCustomer" text="Tilføj kunde">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
